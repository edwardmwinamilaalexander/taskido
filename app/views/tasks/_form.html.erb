<% if task.errors.any? %>
  <h4><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h4>
  <ul>
    <% task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= simple_form_for @task, html: { class: 'form-signin' } do |f| %>
  <%= f.input :content, label: false, placeholder: 'Content', autofocus: true %>
  <!-- <%= f.input :state, label: false, placeholder: 'State',
              collection: ["to_do", "doing", "done"], 
              prompt: "Select State" %> -->
  
  <% if @task.new_record? %>
    <%= f.button :submit, class: 'btn btn-primary w-100' do %>
      <i class="fa-solid fa-plus"></i> Create Task
    <% end %>
  <% else %>
    <%= f.button :submit, class: 'btn btn-primary w-100' do %>
      <i class="fa-solid fa-pen"></i> Update Task
    <% end %>
  <% end %>
<% end %>

<%= link_to 'Go back to all tasks', tasks_path %>