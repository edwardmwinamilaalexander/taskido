<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin' }) do |f| %>
  <h2 class="text-center">Log in</h2>

  <%= f.input :email, required: false, autofocus: true, label: false, placeholder: 'Enter your email', input_html: { class: 'form-control' } %>
  <%= f.input :password, required: false, autofocus: true, label: false, placeholder: 'Enter your password', input_html: { class: 'form-control' } %>

  <%= f.button :submit, "Log In", class: "btn btn-primary w-100" %>
<% end %>

<%= render "devise/shared/links" %>