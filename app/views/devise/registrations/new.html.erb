<%= simple_form_for(resource, as: resource_name,   url: registration_path(resource_name),html: { class: 'form-signin' }) do |f| %>
  <%= f.error_notification %>
  <h2 class="text-center">Sign up</h2>
  <%= f.input :email, required: false, autofocus: true, label: false, placeholder: 'Enter your email', input_html: { class: 'form-control' } %>
  <%= f.input :password, required: false, autofocus: true, label: false, placeholder: 'Enter your password', input_html: { class: 'form-control' } %>
  <%= f.input :password_confirmation, label: false, placeholder: 'Confirm your password', input_html: { class: 'form-control' } %>
  <%= f.button :submit, "Sign Up", class: "btn btn-primary w-100" %>
<% end %>
<%= render "devise/shared/links" %>
